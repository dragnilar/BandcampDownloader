<Window x:Class="BandcampDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:BandcampDownloader.Helpers"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BandcampDownloader.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Bandcamp Downloader (MVVM TEST)"
        Height="440" Width="920"
        MinHeight="440" MinWidth="815"
        WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/Cloud.ico"
        Closing="WindowMain_Closing"
        d:DataContext="{d:DesignInstance local:MainViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo />
    </Window.TaskbarItemInfo>
    <Grid x:Name="gridMain">
        <Grid x:Name="gridLeft" Margin="10,10,230,10">
            <TextBox Margin="0" Name="textBoxUrls" AcceptsReturn="True" Height="111" VerticalAlignment="Top"
                     Text="{Binding Urls, Mode=TwoWay}" VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto" GotFocus="textBoxUrls_GotFocus"
                     LostFocus="textBoxUrls_LostFocus" TabIndex="0" />
            <Grid x:Name="gridDownloadsLocation" Margin="0,117,0,0" VerticalAlignment="Top">
                <Label Content="Save albums to" HorizontalAlignment="Left" Margin="0,-3,0,0"
                       Name="labelDownloadsLocation" VerticalAlignment="Top"
                       ToolTip="You can use placeholders to customize the download folder depending on the album:&#x0a;- {artist} will be replaced by the album artist&#x0a;- {album} will be replaced by the album name&#x0a;- {year}, {month} and {day} will be replaced by the album release date" />
                <TextBox Text="{Binding UserSettings.DownloadsLocation, Mode=TwoWay}" Margin="95,0,32,0"
                         Name="textBoxDownloadsLocation" TabIndex="1"
                         ToolTip="You can use placeholders to customize the download folder depending on the album:&#x0a;- {artist} will be replaced by the album artist&#x0a;- {album} will be replaced by the album name&#x0a;- {year}, {month} and {day} will be replaced by the album release date"
                         VerticalAlignment="Top" Height="20" />
                <Button Content="..." Margin="0" Name="buttonBrowse" HorizontalAlignment="Right" Width="27"
                        Click="buttonBrowse_Click" TabIndex="2" ToolTip="Browse for folder" VerticalAlignment="Top" />
            </Grid>
            <ProgressBar Margin="0,143,0,0" Name="progressBar" VerticalAlignment="Top" IsTabStop="False" Height="18" />
            <RichTextBox Name="richTextBoxLog" Margin="0,167,0,30" HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto" IsReadOnly="True" IsReadOnlyCaretVisible="True"
                         IsTabStop="False" TabIndex="2">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0" />
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
            <Grid x:Name="gridDownloadSpeed" VerticalAlignment="Bottom">
                <Label Content="{Binding VersionText}" Margin="0" x:Name="labelVersion" Foreground="#FF003BFF"
                       VerticalAlignment="Bottom" ToolTip="Click to go to project website" HorizontalAlignment="Left"
                       MouseDown="labelVersion_MouseDown" Cursor="Hand" RenderTransformOrigin="-3.58,0.601" />
                <Label Margin="0,0,220,0" x:Name="labelProgress" HorizontalAlignment="Right" Width="150"
                       HorizontalContentAlignment="Right" VerticalAlignment="Bottom" Content="" />
                <Label Margin="0,0,370,0" x:Name="labelDownloadSpeed" HorizontalAlignment="Right" Width="150"
                       HorizontalContentAlignment="Right" VerticalAlignment="Bottom" Content="" />
                <Button Content="Start download" Margin="0,0,110,0" x:Name="buttonStart" VerticalAlignment="Bottom"
                        Command="{Binding StartDownloadCommand}" HorizontalContentAlignment="Center" TabIndex="15"
                        HorizontalAlignment="Right" Width="105" Height="24" />
                <Button Content="Cancel" HorizontalContentAlignment="Center" Margin="0" x:Name="buttonStop"
                        VerticalAlignment="Bottom" Visibility="Visible" Click="buttonStop_Click" IsEnabled="False"
                        TabIndex="16" HorizontalAlignment="Right" Width="105" Height="24" />
            </Grid>
        </Grid>
        <StackPanel x:Name="gridRight" HorizontalAlignment="Right" Margin="0,10,10,10">
            <GroupBox x:Name="groupBoxSettingsMisc" Margin="0,0,0,0" VerticalAlignment="Bottom" Header="Settings">
                <Grid x:Name="gridSettingsMisc">
                    <CheckBox Content="Tag tracks" Height="16" HorizontalAlignment="Left" Margin="6,4,0,0"
                              x:Name="checkBoxTag" VerticalAlignment="Top"
                              IsChecked="{Binding UserSettings.TagTracks, Mode=TwoWay}"
                              ToolTip="If checked, the album, artist, album artist, title, track number and year will be saved in the tracks tags."
                              TabIndex="3" />
                    <CheckBox Content="Download one album at a time" Height="16" Margin="6,22,0,0"
                              x:Name="checkBoxOneAlbumAtATime" VerticalAlignment="Top"
                              IsChecked="{Binding UserSettings.DownloadOneAlbumAtATime, Mode=TwoWay}" IsEnabled="True"
                              ToolTip="If checked, only one album at a time will be downloaded.&#xA;If unchecked, all albums will be downloaded at the same time (preferred if you have a high bandwidth)."
                              TabIndex="4" HorizontalAlignment="Left" Width="190" />
                    <CheckBox Content="Download artist discography" Height="16" IsEnabled="True" Margin="6,40,0,0"
                              x:Name="checkBoxDownloadDiscography"
                              ToolTip="If checked, the whole artist discography will be downloaded."
                              VerticalAlignment="Top"
                              IsChecked="{Binding UserSettings.DownloadArtistDiscography, Mode=TwoWay}" TabIndex="5"
                              HorizontalAlignment="Left" />
                    <CheckBox Content="Retrieve files size" Height="16" IsEnabled="True" Margin="6,58,0,0"
                              x:Name="checkBoxRetrieveFilesizes"
                              ToolTip="If checked, files size will be retrieved so that precise download progress can be shown.&#xA;Uncheck this option to save some time."
                              VerticalAlignment="Top" IsChecked="{Binding UserSettings.RetrieveFilesizes, Mode=TwoWay}"
                              TabIndex="6" HorizontalAlignment="Left" />
                    <Label x:Name="lableFilenameFormat" Content="File name format:" HorizontalAlignment="Left"
                           Margin="0,68,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="27" />
                    <TextBox HorizontalAlignment="Right" Margin="0,91,5,3" x:Name="textFilenameFormat"
                             VerticalAlignment="Top" Text="{Binding UserSettings.FilenameFormat, Mode=TwoWay}"
                             TabIndex="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                             Width="190"
                             ToolTip="You can use placeholders to customize the file name:&#x0a;- {artist} will be replaced by the album artist&#x0a;- {title} will be replaced by the track name&#x0a;- {tracknum} will be replaced by the track number" />
                </Grid>
            </GroupBox>
            <GroupBox x:Name="groupBoxSettingsCoverArt" Margin="0,0,0,0" Header="Cover art">
                <Grid x:Name="gridSettingsCoverArt">
                    <CheckBox Content="Save in tags" Height="16" HorizontalAlignment="Left"
                              x:Name="checkBoxCoverArtInTags" VerticalAlignment="Top"
                              IsChecked="{Binding UserSettings.SaveCoverArtInTags, Mode=TwoWay}"
                              ToolTip="If checked, the cover art will be saved in the tracks tags." TabIndex="7"
                              Margin="6,4,0,0" />
                    <CheckBox Content="Save in folder" Height="16" HorizontalAlignment="Left" Margin="6,22,0,0"
                              x:Name="checkBoxCoverArtInFolder" VerticalAlignment="Top"
                              IsChecked="{Binding UserSettings.SaveCoverArtInFolder, Mode=TwoWay}"
                              ToolTip="If checked, the cover art will be downloaded in the albums folder." TabIndex="8" />
                    <CheckBox Content="Convert to jpg" Height="16" HorizontalAlignment="Left" Margin="6,40,0,0"
                              x:Name="checkBoxConvertToJpg" VerticalAlignment="Top"
                              IsChecked="{Binding UserSettings.ConvertCoverArtToJpg, Mode=TwoWay}"
                              ToolTip="If checked, the cover art will be converted to jpg with a jpeg compression of 90 (which is an excellent tradeoff between size and perfection)."
                              TabIndex="9" />
                    <CheckBox Height="16" HorizontalAlignment="Left" Margin="6,58,0,0" x:Name="checkBoxResizeCoverArt"
                              VerticalAlignment="Top" Content="Constrain maximum width/height"
                              IsChecked="{Binding UserSettings.ResizeCoverArt, Mode=TwoWay}"
                              ToolTip="If checked, the cover art will be resized with the specified max width/height."
                              TabIndex="10" />
                    <Label x:Name="labelCoverArtMaxSize" Content="Max size:" HorizontalAlignment="Left"
                           Margin="21,72,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" />
                    <TextBox HorizontalAlignment="Left" Margin="79,76,0,0" x:Name="textBoxCoverArtMaxSize"
                             VerticalAlignment="Top" TabIndex="11" VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center" Width="40"
                             IsEnabled="{Binding ElementName=checkBoxResizeCoverArt, Path=IsChecked}">
                        <TextBox.Text>
                            <Binding Path="UserSettings.CoverArtMaxSize" Mode="TwoWay"
                                     UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <conv:OnlyDigitsValidationRule />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <Label x:Name="labelPixels" Content="px" Height="26" HorizontalAlignment="Left" Margin="119,72,0,0"
                           VerticalAlignment="Top" VerticalContentAlignment="Center" />
                </Grid>
            </GroupBox>
            <GroupBox x:Name="groupBoxSettingsLog" Header="Log" Margin="0,0,0,0" VerticalAlignment="Top">
                <Grid x:Name="gridSettingsLog">
                    <CheckBox Content="Auto scroll" Height="16" Margin="6,4,0,0" x:Name="checkBoxAutoScrollLog"
                              VerticalAlignment="Top" Foreground="Black" HorizontalAlignment="Left" Width="79"
                              IsChecked="{Binding UserSettings.AutoScrollLog, Mode=TwoWay}" TabIndex="12" />
                    <CheckBox Content="Verbose" Height="16" Margin="6,22,0,0" Name="checkBoxVerboseLog"
                              VerticalAlignment="Top" Foreground="Black" HorizontalAlignment="Left" Width="65"
                              IsChecked="{Binding UserSettings.ShowVerboseLog, Mode=TwoWay}"
                              RenderTransformOrigin="12.352,6.887" TabIndex="13" />
                </Grid>
            </GroupBox>
            <Button Margin="0,10,0,0" x:Name="buttonDefaultSettings" HorizontalAlignment="Right" Width="110"
                    Click="buttonDefaultSettings_Click" TabIndex="14" ToolTip="Resets settings to default values"
                    Height="25" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="imageArrowCircle225Left"
                           Source="pack://application:,,,/Resources/ArrowCircle225Left.png" Stretch="None"
                           RenderOptions.BitmapScalingMode="NearestNeighbor" Height="16" Width="16" />
                    <Label Padding="0" Margin="7,0,0,0">Reset settings</Label>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>